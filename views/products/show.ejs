<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
  <div class="col-12">
    <div
      class="
        page-title-box
        d-sm-flex
        align-items-center
        justify-content-between
      "
    >
      <h4 class="mb-sm-0 font-size-18">Product Detail</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript: void(0);">Siong Siong Supermart Inventory</a>
          </li>
          <li class="breadcrumb-item active">Product Detail</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-xl-6">
            <div class="product-detai-imgs">
              <div class="row">
                <div class="col-md-7 offset-md-1 col-sm-9 col-8">
                  <div class="tab-content" id="v-pills-tabContent">
                    <div
                      class="tab-pane fade show active"
                      id="product-1"
                      role="tabpanel"
                      aria-labelledby="product-1-tab"
                    >
                      <div>
                        <img
                          src="/public/assets/images/product/sunshinebread.jpeg"
                          alt=""
                          class="img-fluid mx-auto d-block"
                        />
                      </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="product-2"
                      role="tabpanel"
                      aria-labelledby="product-2-tab"
                    >
                      <div>
                        <img
                          src="/public/assets/images/product/sunshinebread.jpeg"
                          alt=""
                          class="img-fluid mx-auto d-block"
                        />
                      </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="product-3"
                      role="tabpanel"
                      aria-labelledby="product-3-tab"
                    >
                      <div>
                        <img
                          src="/public/assets/images/product/sunshinebread.jpeg"
                          alt=""
                          class="img-fluid mx-auto d-block"
                        />
                      </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="product-4"
                      role="tabpanel"
                      aria-labelledby="product-4-tab"
                    >
                      <div>
                        <img
                          src="/public/assets/images/product/sunshinebread.jpeg"
                          alt=""
                          class="img-fluid mx-auto d-block"
                        />
                      </div>
                    </div>
                  </div>
                  <div class="text-center">
                    <button
                      type="button"
                      class="btn btn-danger waves-effect waves-light mt-2 me-1"
                    >
                      <i class="bx bx-cart me-2"></i> Delete Product
                    </button>
                    <button
                      type="button"
                      class="btn btn-success waves-effect mt-2 waves-light"
                    >
                      <i class="bx bx-shopping-bag me-2"></i>Edit Product
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-6">
            <div class="mt-4 mt-xl-3">
              <a href="#" class="text-primary"><%= product.category %></a>
              <h4 class="mt-1 mb-3"><%= product.name %></h4>
              <h5 class="mb-4">
                Stocks :
                <b><%= product.stocks %></b>
              </h5>
              <p class="text-muted mb-4"><%= product.description %></p>
              <div class="row mb-3">
                <h5 class="mb-3">Product Details :</h5>

                <div class="table-responsive">
                  <table class="table mb-0 table-bordered">
                    <tbody>
                      <tr>
                        <th scope="row" style="width: 200px">Category</th>
                        <td><%= product.category %></td>
                      </tr>
                      <tr>
                        <th scope="row">Brand</th>
                        <td><%= product.brand %></td>
                      </tr>
                      <tr>
                        <th scope="row">Origin</th>
                        <td><%= product.origin %></td>
                      </tr>
                      <tr>
                        <th scope="row">Weight</th>
                        <td><%= product.weight %></td>
                      </tr>
                      <tr>
                        <th scope="row">Status</th>
                        <td><%= product.status %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end row -->
      </div>
    </div>
    <!-- end card -->
  </div>
</div>
<!-- end row -->

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>
